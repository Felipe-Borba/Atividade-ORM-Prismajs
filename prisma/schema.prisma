// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Client {
  id         String   @id @default(uuid())
  name       String @unique
  last_name  String
  cpf        Int
  address    String?
  created_at DateTime @default(now())
  updeted_at DateTime @updatedAt

  @@map("client")
}
